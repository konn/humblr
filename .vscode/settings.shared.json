{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "cmd": "find . -not -path '**/dist-newstyle/**' -and \\( -name '*.cabal' -or -name 'cabal*.project*' \\) -exec cabal-gild --io {} \\;",
        "isAsync": true,
        "match": "(\\.l?hs|cabal.*\\.project.*|\\*.cabal)$"
      }
    ]
  },
  "files.associations": {
    "cabal*.project*": "cabal"
  },
  "haskell.formattingProvider": "fourmolu",
  "haskell.sessionLoading": "multipleComponents",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.ruby-lsp": true,
    "**/.wrangler": true,
    "**/.tmp-earthly-out": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/.wrangler/**": true,
    "_builder/**": true
  },
  "evenBetterToml.schema.associations": {
    "wrangler.toml": "/_build/router/node_modules/node_modules/wrangler/config-schema.json"
  }
}
